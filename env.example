# Пример файла переменных окружения для Docker
# Скопируйте этот файл в .env и настройте под свои нужды

# Настройки приложения
NODE_ENV=production

# Таймаут для HTTP запросов (в миллисекундах)
REQUEST_TIMEOUT=300000

# Количество повторных попыток при ошибках
MAX_RETRIES=3

# Пауза между запросами (в миллисекундах)
REQUEST_DELAY=2000

# Директории для данных и логов
DATA_DIR=/app/data
LOGS_DIR=/app/logs

# Настройки Overpass API
OVERPASS_URL=https://overpass-api.de/api/interpreter
OVERPASS_TIMEOUT=180

# Настройки Nominatim API
NOMINATIM_URL=https://nominatim.openstreetmap.org/search
NOMINATIM_LIMIT=5
